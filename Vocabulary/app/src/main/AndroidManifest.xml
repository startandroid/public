<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.startandroid.vocabulary">

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".dictionary.recordlist.ui.RecordListActivity" />
        <activity android:name=".dictionary.recorddetails.ui.RecordDetailsActivity" />
        <activity android:name=".test.ui.TestActivity" android:screenOrientation="portrait"></activity>
    </application>

</manifest>